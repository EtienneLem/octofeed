<%= %(<meta name="page-number" content="#{@page_number}">) if @is_xhr && @page_number < 10 %>
<% @event_groups.each do |event_group| %>
  <article class="<%= event_group.type %>" data-name="<%= event_group.name %>">
    <h1>
      <a href="#" class="avatar"><img width="50" height="50" src="<%= event_group.icon %>"></a>
      <span><%= event_group.title %></span>
    </h1>
    <ul>
      <% event_group.events.each do |event| %>
        <li class="<%= event.type %> Event"><%= event.print %></li>
      <% end %>
    </ul>
  </article>
<% end %>
