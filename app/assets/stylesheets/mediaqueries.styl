@media (max-width: 750px)
  .content, .feed
    width: 100%

  .sidebar
    width: 100%
    margin: 20px 0 0 0
    padding: 0

@media (max-width: 480px)
  html
    font-size: 9px

  .avatar img { size: 35px }

  .logged article
    margin: 0
    padding: 8px 8px 16px

    h1
      padding: 0 0 4px 44px
      font-size: 13

  .repo-group, .user-group
    & > ul { padding: 0 0 0 44px }

  .repo-group .body { padding: 1px 0 0 26px }
  .repo-group .title img { bottom: -24px }
  .repo-group .Event { min-height: 64px }

  .Event .title img { size: 22px }
  .Event .body img { size: 16px }
  .Event .body li + li { padding: 1px 0 0 }

  .PushEvent .title img { bottom: -24px }
  .PushEvent + .PushEvent { padding: 10px 0 0 }

  .FollowEvent .body img { size: 25px }
