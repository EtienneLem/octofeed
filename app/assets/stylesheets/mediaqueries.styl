@media (max-width: 750px)
  .content, .feed
    width: 100%

  .sidebar
    width: 100%
    margin: 20px 0 0 0
    padding: 0

@media (max-width: 480px)
  .logged
    article
      position: relative
      padding: 8px 8px 16px 8px
      min-height: 66px

      h1
        position: relative
        margin: 0
        padding: 0 0 4px 28px
        font-size: 13

        .avatar
          display: block
          position: absolute
          bottom: -10px; left: -6px

      img
        size: 25px
        padding: 1px

      & > ul
        padding-left: 28px

  .current-user h1
    padding-left: 28px !important
